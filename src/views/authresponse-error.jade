script.
    var res = !{ JSON.stringify(message)};
    var event; // The custom event that will be created
    if (document.createEvent) {
        event = document.createEvent("HTMLEvents");
    event.initEvent("authresponse-error", true, true);
    } else {
        event = document.createEventObject();
    event.eventType = "authresponse-error";
    }
    event.data = res;
    event.eventName = "authresponse-error";
    var element = window.top.document.getElementsByTagName("body")[0];
    if (document.createEvent) {
        element.dispatchEvent(event);
    } else {
        element.fireEvent("on" + event.eventType, event);
    }